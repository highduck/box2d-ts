{
  "scripts": {
    "upgrade": "pnpm update -i -r -L",
    "clean:solution": "rimraf packages/**/*.tsbuildinfo",
    "watch:solution": "pnpm clean:solution && tsc -b -w -v tsconfig.solution.json",
    "build:solution": "pnpm clean:solution && tsc -b -v tsconfig.solution.json",
    "release": "changeset publish",
    "version": "changeset version && pnpm update-lock",
    "update-lock": "pnpm i --frozen-lockfile=false && git add pnpm-lock.yaml",
    "test:ci": "jest --coverage",
    "coveralls": "coveralls < coverage/lcov.info",
    "lint": "eslint . --cache --fix"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "regenerator-runtime": "^0.13.7",
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "babel-jest": "^26.3.0",
    "@changesets/cli": "^2.10.2",
    "@typescript-eslint/eslint-plugin": "^4.1.0",
    "@typescript-eslint/parser": "^4.1.0",
    "eslint": "^7.8.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^24.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "ts-jest": "^26.3.0",
    "lint-staged": "^10.3.0",
    "pnpm": "^5.5.12",
    "prettier": "^2.1.1",
    "prettier-plugin-package": "^1.0.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pnpm i --frozen-lockfile && lint-staged && pnpm build:solution"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --cache --fix",
      "git add",
      "jest --bail --findRelatedTests"
    ],
    "*.{json,md,yaml,yml}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "projects": [
      "<rootDir>/packages/box2d/jest.config.js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/highduck/box2d-ts.git"
  },
  "author": "Isaac Burns <isaacburns@gmail.com>",
  "license": "Zlib",
  "bugs": {
    "url": "https://github.com/highduck/box2d-ts/issues"
  },
  "homepage": "https://github.com/highduck/box2d-ts#readme"
}
