{
  "compilerOptions": {
    "composite": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "sourceMap": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "rootDir": "./src",
    "baseUrl": ".",
    "outDir": "./dist/esm"
  },
  "references": [
    {
      "path": "../box2d/tsconfig.project.json"
    }
  ],
  "include": ["./src/**/*.ts"]
}
