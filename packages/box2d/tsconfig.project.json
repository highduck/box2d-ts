{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "outDir": "./dist/esm",
    "rootDir": "./src",
    "baseUrl": ".",
    "composite": true
  },
  "include": [
    "./src/**/*.ts"
  ]
}
